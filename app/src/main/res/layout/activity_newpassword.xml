<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/enterPass_txt"
        android:layout_width="327dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Enter Password"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="430dp" />

    <EditText
        android:id="@+id/entPass"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Password"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="460dp" />

    <TextView
        android:id="@+id/enterUser_txt"
        android:layout_width="327dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Enter Username/Email"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="318dp" />

    <EditText
        android:id="@+id/entUser"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Username/Email"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="348dp" />

    <TextView
        android:id="@+id/enterWebsite_txt"
        android:layout_width="327dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Enter Website"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="206dp" />

    <EditText
        android:id="@+id/entWeb"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Website Name"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="236dp" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="263dp"
        android:layout_height="89dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lockin_logo__1_" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:textSize="20sp"
        android:text="Save"
        android:backgroundTint="#5E17EB"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="538dp"
        />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:textSize="20sp"
        android:text="Back"
        android:backgroundTint="#5E17EB"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="596dp" />

</androidx.constraintlayout.widget.ConstraintLayout>